{
  "name": "wsjtx-lib",
  "version": "1.0.0",
  "description": "Node.js C++ extension for WSJTX digital radio protocol library",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "build/Release/*.node",
    "prebuilds",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "prebuild-install",
    "build": "npm run build:native && npm run build:ts",
    "build:native": "cmake-js compile",
    "build:native:win": "cmake-js compile -- -G \"MinGW Makefiles\" -DCMAKE_C_COMPILER=gcc -DCMAKE_CXX_COMPILER=g++ -DCMAKE_Fortran_COMPILER=gfortran",
    "build:ts": "tsc",
    "clean": "cmake-js clean && rimraf dist",
    "test": "npm run build && node --test dist/test/wsjtx.basic.test.js",
    "test:basic": "npm run build && node --test dist/test/wsjtx.basic.test.js",
    "test:full": "npm run build && node --test dist/test/wsjtx.test.js",
    "test:only": "node --test dist/test/wsjtx.test.js",
    "prepare": "npm run build:ts"
  },
  "keywords": [
    "wsjtx",
    "ft8",
    "ft4",
    "wspr",
    "ham",
    "radio",
    "digital",
    "protocol",
    "decoder",
    "encoder",
    "native",
    "addon",
    "typescript"
  ],
  "author": "boybook",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boybook/wsjtx-lib-nodejs.git"
  },
  "dependencies": {
    "node-addon-api": "^8.3.1",
    "prebuild-install": "^7.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/wav": "^1.0.4",
    "cmake-js": "^7.3.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "wav": "^1.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
